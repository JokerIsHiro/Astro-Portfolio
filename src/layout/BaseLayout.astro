---
import ProfileCard from "../components/ProfileCard.astro";
import ProjectCard from "../components/ProjectCard.astro";
import ContactCard from "../components/ContactCard.astro";
import LanguajesCard from "../components/LanguajesCard.astro";
import BusinessCard from "../components/BusinessCard.astro";

import "../styles/global.css";
---

<html>
  <head>
    <meta charset="utf-8" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Portfolio</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>
  <body class="bg-white dark:bg-[#020617] transition-all duration-300 ease-in-out">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:mt-4">
      <section
        class="w-full mx-auto p-4 rounded-lg shadow-[4px_4px_25px_10px_rgba(0,0,0,0.1)] dark:shadow-[4px_4px_25px_10px_rgba(255,255,255,0.1)]"
      >
        <ProfileCard/>
      </section>

      <!-- Proyectos: se mostrará en una columna en dispositivos pequeños y en una de las tres columnas en dispositivos medianos o más grandes -->
      <section
        class="w-full mx-auto p-4 rounded-lg shadow-[4px_4px_25px_10px_rgba(0,_0,_0,_0.1)] dark:shadow-[4px_4px_25px_10px_rgba(255,255,255,0.1)]"
      >
        <ProjectCard />
      </section>

      <!-- Formulario: ContactCard y LanguajesCard ajustados para alinearse correctamente en md -->
      <div class="grid grid-cols-1 md:grid-cols-2 md:col-span-2 lg:grid-cols-1 lg:col-span-1 gap-4">
        <section
          class="w-full mx-auto p-4 rounded-lg shadow-[4px_4px_25px_10px_rgba(0,_0,_0,_0.1)] dark:shadow-[4px_4px_25px_10px_rgba(255,255,255,0.1)]"
        >
          <ContactCard />
        </section>
        <section
          class="w-full h-full mx-auto p-4 rounded-lg shadow-[4px_4px_25px_10px_rgba(0,_0,_0,_0.1)] dark:shadow-[4px_4px_25px_10px_rgba(255,255,255,0.1)]"
        >
          <LanguajesCard />
        </section>
        <!-- Carrusel: ocupa toda la fila en `md` y `lg` -->
        <section
          class="p-4 w-full rounded-lg shadow-[4px_4px_25px_10px_rgba(0,_0,_0,_0.1)] dark:shadow-[4px_4px_25px_10px_rgba(255,255,255,0.1)] md:col-span-2 lg:col-span-1"
        >
          <BusinessCard />
        </section>
      </div>
    </div>
    <script>
      import "../scripts/theme.js";
    </script>
  </body>
</html>
