---
import "../styles/global.css";
---

<html>
  <head>
    <meta charset="utf-8" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Portfolio</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>
  <body class="bg-white dark:bg-[#020617]">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:mt-4">
      <section
        class="h-full w-full mx-auto p-4 rounded-lg shadow-[4px_4px_25px_10px_rgba(0,0,0,0.1)] dark:shadow-[4px_4px_25px_10px_rgba(255,255,255,0.1)]"
      >
        <slot name="perfil" />
      </section>

      <!-- Proyectos: se mostrará en una columna en dispositivos pequeños y en una de las tres columnas en dispositivos medianos o más grandes -->
      <section
        class="max-w-full mx-auto p-4 rounded-lg shadow-[4px_4px_25px_10px_rgba(0,_0,_0,_0.1)] dark:shadow-[4px_4px_25px_10px_rgba(255,255,255,0.1)]"
      >
        <slot name="proyectos" />
      </section>

      <!-- Formulario: se mostrará en una de las tres columnas en dispositivos medianos o más grandes -->
      <div class="mx-auto items-center justify-center grid grid-cols-1 gap-4">
        <section
          class="max-w-full mx-auto p-4 rounded-lg shadow-[4px_4px_25px_10px_rgba(0,_0,_0,_0.1)] dark:shadow-[4px_4px_25px_10px_rgba(255,255,255,0.1)]"
        >
          <slot name="formulario" />
        </section>

        <!-- Lenguajes: se mostrará en una de las tres columnas en dispositivos medianos o más grandes -->
        <section
          class="max-w-full mx-auto p-4 rounded-lg shadow-[4px_4px_25px_10px_rgba(0,_0,_0,_0.1)] dark:shadow-[4px_4px_25px_10px_rgba(255,255,255,0.1)]"
        >
          <slot name="lenguajes" />
        </section>

        <!-- Carrusel: ocupará toda la fila a partir de `md` y puede estar en una sola columna a partir de `md` -->
        <section
          class="p-4 w-full rounded-lg shadow-[4px_4px_25px_10px_rgba(0,_0,_0,_0.1)] dark:shadow-[4px_4px_25px_10px_rgba(255,255,255,0.1)]"
        >
          <slot name="carrusel" />
        </section>
      </div>
    </div>
    <script>
      import "../scripts/theme.js";
    </script>
  </body>
</html>
